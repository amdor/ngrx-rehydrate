{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "target": "ES2020",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "paths": {
            "*": ["./node_modules/*"]
        },
        "preserveConstEnums": true,
        "strict": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}